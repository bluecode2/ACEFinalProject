<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts-config PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 1.2//EN" "http://struts.apache.org/dtds/struts-config_1_2.dtd">
<struts-config>
	<form-beans>

		<form-bean name="empForm" type="employees.EmployeesForm"></form-bean>
	</form-beans>

	<action-mappings>
		<action path="/emp" name="empForm" type="employees.EmployeesHandler"
			scope="request">
			<forward name="empHalList" path="/WEB-INF/emp/EmployeeList.jsp"></forward>
			<forward name="empHalEdit" path="/WEB-INF/emp/EmployeeEdit.jsp"></forward>
			<forward name="empHalAdd" path="/WEB-INF/emp/EmployeeAdd.jsp"></forward>
			<forward name="report" path="/report/report.jsp"></forward>

		</action>
	</action-mappings>

	<message-resources parameter="application" />
	<plug-in className="org.apache.struts.validator.ValidatorPlugIn">
		<set-property property="pathnames"
			value="/WEB-INF/validator-rules.xml,/WEB-INF/validation.xml" />
	</plug-in>

</struts-config>
